<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <filter>
        <filter-name>CheckUserSession</filter-name>
        <filter-class>filter.CheckUserSession</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CheckUserSession</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>SImpleLogin</servlet-name>
        <servlet-class>controller.temporary.SImpleLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TimesheetManagement</servlet-name>
        <servlet-class>controller.TimesheetManagement</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SImpleLogin</servlet-name>
        <url-pattern>/SImpleLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TimesheetManagement</servlet-name>
        <url-pattern>/TimesheetManagement</url-pattern>
    </servlet-mapping>
</web-app>
